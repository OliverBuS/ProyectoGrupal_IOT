<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".RecuperarCambioActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:text="Cambio de contraseña"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:gravity="start"/>

    <TextView
        android:labelFor="@+id/edPassword1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:text="Nueva contraseña"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="36dp"
        android:gravity="start"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edPassword1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="48dp"
        android:background="@drawable/background_gray_rounded"
        />
    <TextView
        android:labelFor="@+id/edPassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:text="Confirmar contraseña"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:gravity="start"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edPassword2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="48dp"
        android:background="@drawable/background_gray_rounded"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buGuardar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="48dp"
            android:background="@drawable/background_red_rounded"
            android:text="Guardar"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"/>
    </RelativeLayout>

</LinearLayout>